{
  "manifest_version": 3,
  "name": "AI Grammar Fix",
  "version": "1.0.0",
  "description": "Fix grammar using AI",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "public/icon.png"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "permissions": ["contextMenus", "scripting", "activeTab", "storage"],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://your-backend.example.com/*"
  ],
  "icons": {
    "16": "public/icon.png",
    "48": "public/icon.png",
    "128": "public/icon.png"
  }
}
